<%= form_with model: blog_post do |form| %>
<div>
<%= form.label :title %>
<%= form.text_field :title %>
<% @blog_post.errors.full_messages_for(:title).each do |message| %>
<p><%= message %></p>
<% end %>
</div>
<div>
<%= form.label :body %>
<%= form.text_area :body %>
<% @blog_post.errors.full_messages_for(:body).each do |message| %>
<p><%= message %></p>
<% end %>
</div>
<div>
<%= form.label :publish_date %>
<%= form.datetime_select :publishedAt, include_blank:true %>
</div>
<div>
<%= form.submit %>
</div>
<% end %>