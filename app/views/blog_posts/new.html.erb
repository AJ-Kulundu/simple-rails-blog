<h1>Create a blog </h1>

<%= form_with model: @blog_post do |form| %>
<div>
<%= form.label :title %>
<%= form.text_field :title %>
<% @blog_post.errrors.ful_mesaages_for(:title).each do |message| %>
<p><%= message %></p>
<% end %>
</div>
<div>
<%= form.label :body %>
<%= form.text_area :body %>
<% @blog_post.errrors.ful_mesaages_for(:body).each do |message| %>
<p><%= message %></p>
<% end %>
</div>
<div>
<%= form.submit %>
</div>
<% end %>