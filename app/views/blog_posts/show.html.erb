<h1><%= @blog_post.title %></h1>
<p><%= @blog_post.body %><p>


<%if user_signed_in?%>
<%= link_to "Edit", edit_blog_post_path(@blog_post) %>
<%= button_to "Destroy", blog_post_path(@blog_post) , data:{
    turbo_method: :delete,
    turbo_confirm: "Are you sure you want to delete #{@blog_post.title}?"
}%>
<%end%>